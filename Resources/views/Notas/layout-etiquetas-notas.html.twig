{% extends '::base.html.twig' %}

 {% block stylesheets%}
<link href="{{ asset('bundles/jamnotasfrontend/vendors/jquery/css/ui-lightness/jquery-ui-1.8.17.custom.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('bundles/jamnotasfrontend/vendors/jquery-layout/css/layout-default-latest.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('bundles/jamnotasfrontend/css/ui.css') }}" type="text/css" rel="stylesheet" />
{% endblock%}

{% block javascripts %}
<script src="{{ asset('bundles/jamnotasfrontend/vendors/jquery/js/jquery-1.7.1.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/jamnotasfrontend/vendors/jquery/js/jquery-ui-1.8.17.custom.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/jamnotasfrontend/vendors/jquery-layout/js/jquery.layout.min-1.2.0.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/jamnotasfrontend/js/ui.js') }}" type="text/javascript"></script>
{% endblock %}

 {% block body %}

    {% block cabecera %}

<div class="ui-layout-north ui-widget-content" >

    <div class="banner">
        <span style="font-size: xx-large">
            PUBLICIDAD       
        </span>
        <a class="ui-button usuario-tool premium ui-corner-all" href="">
            contrata premium, elimina la publicidad y obten numerosas ventajas!
        </a>
    </div>

    <div class="logo">
        <span>MentorNotas</span>
        <img style="float:left;" height="60" src="{{ asset('bundles/jamnotasfrontend/images/mentor.png')}}"></img>

    </div>

    <div class="signout">
        <span class="usuario-nombre">{{ app.user.nombre }} {{app.user.apellidos }}</span>
        <a id="btn_salir" class="ui-button ui-button-text-icon-primary usuario-tool salir ui-corner-all" href="{{path('jamn_logout')}}">
            <span class="ui-button-icon-primary ui-icon ui-icon-power"></span>
            <span class="ui-button-text">salir</span></a>
    </div>


</div>

    {% endblock %} <!-- End block cabecera -->

    {% block notas %}

<div class="ui-layout-center">

    <h3 class="ui-widget-header">Listado de notas</h3>


    <div class="ui-widget my-widget">
        <div class="ui-widget-content my-widget-content">

            <form id="form_buscar" action="{{ path("jamn_buscar") }}" method="post">
                <input class="buscar ui-corner-all" size="20" name="txt_buscar" id="txt_buscar"/>
                <button type=submit" class="btn_buscar"> Buscar</button>
            </form>
        </div>
    </div>

    <div class="separador"></div>


    <div class="ui-layout-content ui-widget-content">
        <div class="ui-widget-content my-widget-content">

                {% for nota in notas %}
                {%if nota.id == nota_seleccionada.id %}
            <div class="nota seleccionada">
                {% else %}
                    <div class="nota">
                {% endif %}
                            <a href="{{ path('jamn_nota',{"id": nota.id}) }}">
                                <div class="nota-container">
                                    <div class="nota-titulo">
                            {{ nota.titulo }}
                                        </div>
                                        <div class="nota-content">
                                            <span class="nota-fecha"> {{ nota.fecha.date }}</span>
                            {{ nota.texto|raw }}

                                        </div>
                                    </div>
                                </a>
                            </div>

                {% else %}
                            <div class="ui-state-highlight"><span class="ui-icon ui-icon-alert" style="float:left;"></span><span style="padding: 0.5em;"> No se han encontrado notas</span></div>
                {% endfor %}

                        </div>
                    </div>

                </div>

            </div>

    {% endblock %} <!-- End block centro -->

    {% block etiquetas %}

            <div class="ui-layout-west etiquetas">
                <h3 class="ui-widget-header">Etiquetas</h3>
                <div class="ui-layout-content ui-widget-content">
                    <ul>
                        <li>
                            <span class="ui-icon ui-icon-star" style="float:left;"></span>
                            <a href="{{ path("jamn_conetiqueta", {"etiqueta": 'todas'}) }}"> todas las notas</a>
                        </li>
                {% for etiqueta in etiquetas %}
                        <li>
                            <span class="ui-icon ui-icon-tag" style="float:left;"></span>
                            <a href="{{ path("mn_conetiqueta", {"etiqueta": etiqueta.id}) }}">{{ etiqueta.texto }}</a>
                        </li>
                {% endfor%}
                    </ul>
                </div>
            </div>

    {% endblock %}  <!-- End block etiquetas -->



 {% endblock %} 